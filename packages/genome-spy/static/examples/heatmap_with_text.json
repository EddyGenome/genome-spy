{
  "data": {
    "sequence": { "start": 0, "stop": 40000, "as": "z" }
  },
  "transform": [
    { "type": "formula", "as": "x", "expr": "datum.z % 200" },
    { "type": "formula", "as": "y", "expr": "floor(datum.z / 200)" },
    {
      "type": "formula",
      "as": "measurement",
      "expr": "sin((sin(datum.x / 30) + cos(datum.y / 25 - 0.5 + sin(datum.x / 40) * 2)) * 4)"
    }
  ],

  "resolve": { "scale": { "color": "independent" } },

  "encoding": {
    "x": { "field": "x", "type": "locus" },
    "y": { "field": "y", "type": "locus" }
  },

  "layer": [
    {
      "mark": "rect",
      "encoding": {
        "color": {
          "field": "measurement",
          "type": "quantitative",
          "scale": {
            "scheme": "viridis"
          }
        }
      }
    },
    {
      "mark": {
        "type": "text",
        "fitToBand": true,
        "paddingX": 4,
        "paddingY": 3
      },
      "encoding": {
        "text": { "field": "measurement", "type": "nominal", "format": ".2f" },
        "size": { "value": 12 },
        "opacity": {
          "value": 0.8
        },
        "color": {
          "field": "measurement",
          "type": "quantitative",
          "scale": {
            "type": "threshold",
            "domain": [-0],
            "range": ["white", "black"]
          }
        }
      }
    },
    {
      "data": { "values": [{}] },
      "mark": {
        "type": "text",
        "align": "left",
        "baseline": "bottom",
        "dx": 5,
        "dy": -5
      },
      "encoding": {
        "x": { "value": 0 },
        "y": { "value": 0 },
        "text": { "value": "Zoom in using the mouse wheel!" },
        "color": { "value": "white" },
        "size": { "value": 13 }
      }
    }
  ]
}
